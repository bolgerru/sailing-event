datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Race {
  id          Int       @id @default(autoincrement())
  raceNumber  Int       @unique
  teamA       String
  teamB       String
  league      String?
  result      Json?     @default("[]")  // Changed from Int[] to Json
  boats       Json?
  status      String    @default("not_started")
  startTime   DateTime?
  endTime     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("races")
}

